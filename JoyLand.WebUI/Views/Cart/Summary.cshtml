@model JoyLand.Domain.Entities.Cart

@if (Session["UserId"] != null)
{
    <h2><p><font face="Times New Roman" />Войдите в систему</p></h2>
    <div class="navbar-right">
        <div class="navbar-right hidden-xs">
            @Html.ActionLink("Заказать", "Index", "Cart",
            new { returnUrl = Request.Url.PathAndQuery },
            new { @class = "btn btn-default navbar-btn" })
        </div>
        @Session["Username"].ToString()
        <div class="navbar-right hidden-xs">
            @Html.ActionLink("Выйти из аккаунта", "Logout", "Account",
            new { returnUrl = Request.Url.PathAndQuery },
            new { @class = "btn btn-default navbar-btn" })
        </div>
    </div>
    <div class="navbar-right visible-xs">
        <a href=@Url.Action("Index", "Cart", new { returnUrl = Request.Url.PathAndQuery })
           class="btn btn-default navbar-btn">
            <span class="glyphicon glyphicon-shopping-cart"></span>
        </a>
    </div>

    <div class="navbar-text navbar-right">
        <b class="hidden-xs">Ваша корзина:</b>
        @Model.Lines.Sum(x => x.Quantity) тов,
        @Model.ComputeTotalValue().ToString("# грн")
    </div>
}

@if (Session["UserId"] == null)
{
    <h2><p><font face="Times New Roman" />Войдите в систему</p></h2>
    <div class="navbar-right">
        @Html.ActionLink("Войти", "LoginUs", "Account",
                new { returnUrl = Request.Url.PathAndQuery },
                new { @class = "btn btn-default navbar-btn" })
        @Html.ActionLink("Регистрация", "Register", "Account",
            new { returnUrl = Request.Url.PathAndQuery },
            new { @class = "btn btn-default navbar-btn" })
    </div>
}




